   <children>
      <Label fx:id="resultsLabel" alignment="CENTER" layoutX="258.0" layoutY="24.0" prefHeight="32.0" prefWidth="328.0" text="RESULTS BOX" textAlignment="CENTER" />
      <ListView fx:id="mStats" editable="true" layoutX="258.0" layoutY="56.0" prefHeight="308.0" prefWidth="328.0" />
      <Button fx:id="leagueButton" layoutX="25.0" layoutY="97.0" mnemonicParsing="false" onAction="#handleLeague" prefHeight="25.0" prefWidth="159.0" text="Play League" />
      <Button fx:id="matchResButton" layoutX="25.0" layoutY="156.0" mnemonicParsing="false" onAction="#displayMatchResults" prefHeight="25.0" prefWidth="159.0" text="Match Results" />
